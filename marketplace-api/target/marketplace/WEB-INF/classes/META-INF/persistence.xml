<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="marketplacePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernateJpaProvider</provider>
        
        <!-- Entités JPA -->
        <class>com.marketplace.entities.Utilisateurs</class>
        <class>com.marketplace.entities.Roles</class>
        <class>com.marketplace.entities.Adresses</class>
        <class>com.marketplace.entities.AttributsProduits</class>
        <class>com.marketplace.entities.AvisBoutiques</class>
        <class>com.marketplace.entities.AvisProduits</class>
        <class>com.marketplace.entities.AvoirFactures</class>
        <class>com.marketplace.entities.BannièresPublicitaires</class>
       
        <class>com.marketplace.entities.Boutiques</class>
        <class>com.marketplace.entities.CategoriesBoutiques</class>
        <class>com.marketplace.entities.CategoriesProduits</class>
        <class>com.marketplace.entities.Commandes</class>
        <class>com.marketplace.entities.ConfigurationsBoutique</class>
        <class>com.marketplace.entities.Conversations</class>
        <class>com.marketplace.entities.Coupons</class>
        <class>com.marketplace.entities.DocumentsBoutique</class>
        <class>com.marketplace.entities.Factures</class>
        <class>com.marketplace.entities.HistoriqueCommandes</class>
        <class>com.marketplace.entities.ImagesAvis</class>
        <class>com.marketplace.entities.ImagesProduits</class>
        <class>com.marketplace.entities.LignesCommande</class>
        <class>com.marketplace.entities.LignesPanier</class>
        <class>com.marketplace.entities.ListesSouhaits</class>
        <class>com.marketplace.entities.LogsActivites</class>
        <class>com.marketplace.entities.Marques</class>
        <class>com.marketplace.entities.Messages</class>
        <class>com.marketplace.entities.MethodesPaiement</class>
        <class>com.marketplace.entities.Notifications</class>
        <class>com.marketplace.entities.Paiements</class>
        <class>com.marketplace.entities.Paniers</class>
       
        <class>com.marketplace.entities.PreferencesNotifications</class>
        <class>com.marketplace.entities.Produits</class>
        <class>com.marketplace.entities.ProduitsListeSouhaits</class>
        <class>com.marketplace.entities.ProduitsPromotion</class>
        <class>com.marketplace.entities.Promotions</class>
        <class>com.marketplace.entities.Remboursements</class>
        <class>com.marketplace.entities.StatistiquesBoutiques</class>
        <class>com.marketplace.entities.StatistiquesProduits</class>
        <class>com.marketplace.entities.StatutsCommande</class>
        <class>com.marketplace.entities.UtilisationsCoupons</class>
        <class>com.marketplace.entities.VariantesProduits</class>
        
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/SenMarket"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="poiuy"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>
</persistence>